#!/bin/bash

# Bed brugeren om at indtaste 'ja' eller 'nej'
echo "Indtast 'ja' eller 'nej':"
read svar

# Normaliser svaret til lowercase for at gøre tjekket case-insensitive
svar=$(echo "$svar" | tr '[:upper:]' '[:lower:]')

# Afgør hvilken besked der skal vises baseret på brugerens svar
if [ "$svar" == "ja" ]; then
    echo "Du svarede ja."
elif [ "$svar" == "nej" ]; then
    echo "Du svarede nej."
else
    echo "Ugyldigt svar. Venligst indtast 'ja' eller 'nej'."
fi
