#!/bin/bash

# Tjek om et filnavn er givet som argument
if [ "$#" -ne 1 ]; then
    echo "Brug: $0 filnavn"
    exit 1
fi

filnavn=$1

# Tjek om filen eksisterer
if [ ! -f "$filnavn" ]; then
    echo "Filen '$filnavn' findes ikke."
    exit 1
fi

# LÃ¦s filen linje for linje
while IFS= read -r linje
do
    echo "$linje"
done < "$filnavn"
